        <td><%= function_to_group_assignment.cpkfk_function %></td>
        <td><%= function_to_group_assignment.function_sort_order %></td>
        <td><%= link_to 'Show', function_to_group_assignment %></td>
        <td><%= link_to 'Edit', edit_function_to_group_assignment_path(function_to_group_assignment) %></td>
        <td><%= link_to 'Destroy', function_to_group_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

