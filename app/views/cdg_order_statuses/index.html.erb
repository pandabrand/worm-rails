<p id="notice"><%= notice %></p>

<h1>Cdg Order Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Is active</th>
      <th>Name</th>
      <th>Sort order</th>
      <th>Name for display</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cdg_order_statuses.each do |cdg_order_status| %>
      <tr>
        <td><%= cdg_order_status.is_active %></td>
        <td><%= cdg_order_status.name %></td>
        <td><%= cdg_order_status.sort_order %></td>
        <td><%= cdg_order_status.name_for_display %></td>
        <td><%= link_to 'Show', cdg_order_status %></td>
        <td><%= link_to 'Edit', edit_cdg_order_status_path(cdg_order_status) %></td>
        <td><%= link_to 'Destroy', cdg_order_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

