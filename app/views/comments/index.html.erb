<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Date created</th>
      <th>Date modified</th>
      <th>Fk creator</th>
      <th>Value</th>
      <th>Fk assistant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.date_created %></td>
        <td><%= comment.date_modified %></td>
        <td><%= comment.fk_creator %></td>
        <td><%= comment.value %></td>
        <td><%= comment.fk_assistant %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
