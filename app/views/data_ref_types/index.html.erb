<h1>Data Ref Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data_ref_types.each do |data_ref_type| %>
      <tr>
        <td><%= data_ref_type.name %></td>
        <td><%= link_to 'Show', data_ref_type %></td>
        <td><%= link_to 'Edit', edit_data_ref_type_path(data_ref_type) %></td>
        <td><%= link_to 'Destroy', data_ref_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

